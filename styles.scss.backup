// Variables SCSS
$primary-pink: #ff6fb5;
$light-pink: #ffb3d9;
$lighter-pink: #ffc9e5;
$pale-pink: #ffd1e8;
$very-light-pink: #ffe0f0;
$hot-pink: #ff4da6;
$red-bow: #ff1744;
$dark-red-bow: #c41236;
$golden: #ffd700;
$golden-dark: #e6c200;

$font-handwritten: 'Caveat', cursive;
$font-main: 'Patrick Hand', cursive;
$font-modern: 'Quicksand', sans-serif;

// Mixins
@mixin flex-center {
    display: flex;
    justify-content: center;
    align-items: center;
}

@mixin absolute-center {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
}

@mixin smooth-transition($properties: all, $duration: 0.3s) {
    transition: $properties $duration ease;
}

* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: $font-main;
    background: linear-gradient(135deg, #ffc3e1 0%, $light-pink 25%, $lighter-pink 50%, $pale-pink 75%, $very-light-pink 100%);
    min-height: 100vh;
    @include flex-center;
    overflow: hidden;
    position: relative;
}

body::before {
    content: 'üíï ‚ú® üíñ ‚≠ê üíó ‚ú® üíï ‚≠ê üíñ';
    position: absolute;
    top: 20px;
    left: 0;
    right: 0;
    text-align: center;
    font-size: 30px;
    opacity: 0.3;
    animation: float 6s ease-in-out infinite;
}

@keyframes float {
    0%, 100% { transform: translateY(0px); }
    50% { transform: translateY(-10px); }
}

.container {
    position: relative;
    width: 100%;
    height: 100vh;
    display: flex;
    justify-content: center;
    align-items: center;
}

/* ==================== SOBRE ==================== */
.envelope {
    width: 400px;
    height: 280px;
    position: relative;
    cursor: pointer;
    transition: transform 0.3s ease;
    z-index: 10;
}

.envelope:hover {
    transform: scale(1.05);
}

/* Animaciones manejadas por GSAP */

.envelope-back {
    position: absolute;
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #ff85c0 0%, $primary-pink 100%);
    border-radius: 10px;
    box-shadow: 0 10px 40px rgba($primary-pink, 0.4);
}

.envelope-front {
    position: absolute;
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, $light-pink 0%, #ff8dc7 100%);
    border-radius: 10px;
    @include flex-center;
    flex-direction: column;
    z-index: 2;
    box-shadow: 0 5px 20px rgba(0, 0, 0, 0.2);
}

.envelope-flap {
    position: absolute;
    top: 0;
    left: 0;
    width: 0;
    height: 0;
    border-left: 200px solid transparent;
    border-right: 200px solid transparent;
    border-top: 140px solid $primary-pink;
    transform-origin: top center;
    z-index: 3;
    filter: drop-shadow(0 2px 8px rgba(0, 0, 0, 0.2));
}

/* Corazones decorativos en el sobre */
.heart {
    position: absolute;
    font-size: 24px;
    animation: heartBeat 1.5s ease infinite;
}

.heart-1 {
    top: 20px;
    left: 30px;
    animation-delay: 0s;
}

.heart-2 {
    top: 30px;
    right: 40px;
    animation-delay: 0.3s;
}

.heart-3 {
    bottom: 30px;
    left: 50px;
    animation-delay: 0.6s;
}

@keyframes heartBeat {
    0%, 100% { transform: scale(1); }
    50% { transform: scale(1.2); }
}

/* ==================== HELLO KITTY EN EL SOBRE ==================== */
.kitty-face {
    margin-bottom: 15px;
    animation: kittyFloat 3s ease-in-out infinite;
}

@keyframes kittyFloat {
    0%, 100% { transform: translateY(0px) rotate(0deg); }
    25% { transform: translateY(-3px) rotate(-2deg); }
    50% { transform: translateY(-5px) rotate(0deg); }
    75% { transform: translateY(-3px) rotate(2deg); }
}

.kitty-head {
    position: relative;
    width: 110px;
    height: 100px;
    filter: drop-shadow(0 4px 8px rgba(0, 0, 0, 0.15));
}

.ear {
    position: absolute;
    width: 32px;
    height: 38px;
    background: white;
    border-radius: 50% 50% 5% 5%;
    top: 0;
    border: 2px solid #333;
}

.ear-inner {
    position: absolute;
    width: 18px;
    height: 20px;
    background: #ffb3d9;
    border-radius: 50%;
    top: 8px;
    left: 50%;
    transform: translateX(-50%);
}

.ear-left {
    left: 8px;
    transform: rotate(-15deg);
}

.ear-right {
    right: 8px;
    transform: rotate(15deg);
}

.face {
    position: absolute;
    width: 85px;
    height: 75px;
    background: white;
    border-radius: 42% 42% 48% 48%;
    top: 22px;
    left: 12px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    border: 2px solid #333;
    box-shadow: inset 0 -5px 10px rgba(255, 179, 217, 0.2);
}

.bow {
    position: absolute;
    top: -8px;
    left: 62%;
    transform: translateX(-50%);
    display: flex;
    align-items: center;
    filter: drop-shadow(0 2px 3px rgba(0, 0, 0, 0.2));
    animation: bowBounce 2s ease-in-out infinite;
}

@keyframes bowBounce {
    0%, 100% { transform: translateX(-50%) scale(1); }
    50% { transform: translateX(-50%) scale(1.05); }
}

.bow-left, .bow-right {
    width: 18px;
    height: 18px;
    background: $red-bow;
    border-radius: 50% 0;
    border: 2px solid $dark-red-bow;
    position: relative;
}

.bow-left {
    transform: rotate(45deg);
}

.bow-left::before {
    content: '';
    position: absolute;
    width: 6px;
    height: 6px;
    background: #ff4569;
    border-radius: 50%;
    top: 3px;
    right: 3px;
}

.bow-right {
    transform: rotate(-45deg);
}

.bow-right::before {
    content: '';
    position: absolute;
    width: 6px;
    height: 6px;
    background: #ff4569;
    border-radius: 50%;
    top: 3px;
    left: 3px;
}

.bow-center {
    width: 10px;
    height: 10px;
    background: $red-bow;
    border-radius: 50%;
    margin: 0 -4px;
    border: 2px solid $dark-red-bow;
    z-index: 1;
}

.eyes {
    display: flex;
    gap: 24px;
    margin-top: 18px;
}

.eye {
    width: 10px;
    height: 10px;
    background: #1a1a1a;
    border-radius: 50%;
    position: relative;
    animation: blink 4s infinite;
}

@keyframes blink {
    0%, 96%, 100% { transform: scaleY(1); }
    98% { transform: scaleY(0.1); }
}

.eye-shine {
    position: absolute;
    width: 3px;
    height: 3px;
    background: white;
    border-radius: 50%;
    top: 2px;
    left: 2px;
}

.nose {
    width: 14px;
    height: 10px;
    background: $golden;
    border-radius: 0 0 50% 50% / 0 0 100% 100%;
    margin-top: 8px;
    position: relative;
    border: 1px solid $golden-dark;
    border-top: none;
}

.nose::before {
    content: '';
    position: absolute;
    width: 2px;
    height: 10px;
    background: #333;
    left: 50%;
    transform: translateX(-50%);
    top: 100%;
    border-radius: 0 0 2px 2px;
}

.whiskers {
    position: absolute;
    top: 52%;
    display: flex;
    flex-direction: column;
    gap: 4px;
}

.whiskers-left {
    left: -18px;
    align-items: flex-end;
}

.whiskers-right {
    right: -18px;
    align-items: flex-start;
}

.whisker {
    height: 2px;
    background: #333;
    border-radius: 1px;
}

.whiskers-left .whisker-1 {
    width: 18px;
    transform-origin: right;
    transform: rotate(-10deg);
}

.whiskers-left .whisker-2 {
    width: 20px;
}

.whiskers-left .whisker-3 {
    width: 18px;
    transform-origin: right;
    transform: rotate(10deg);
}

.whiskers-right .whisker-1 {
    width: 18px;
    transform-origin: left;
    transform: rotate(10deg);
}

.whiskers-right .whisker-2 {
    width: 20px;
}

.whiskers-right .whisker-3 {
    width: 18px;
    transform-origin: left;
    transform: rotate(-10deg);
}

.envelope-text {
    color: white;
    font-size: 18px;
    font-weight: bold;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
    animation: pulse 2s ease infinite;
}

@keyframes pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.6; }
}

/* ==================== CARTA ==================== */
.letter {
    position: absolute;
    width: 500px;
    max-width: 90vw;
    max-height: 80vh;
    background: white;
    border-radius: 15px;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
    opacity: 0;
    transform: scale(0.3) translateY(50px);
    pointer-events: none;
    z-index: 5;
    overflow: hidden;
}

.letter-content {
    padding: 40px;
    background: linear-gradient(to bottom, #fff5f9 0%, white 20%);
    border: 3px solid #ffb3d9;
    border-radius: 15px;
    height: 100%;
    overflow-y: auto;
    position: relative;
}

/* Sello de Hello Kitty en la carta */
.letter-header {
    display: flex;
    justify-content: flex-end;
    margin-bottom: 20px;
}

.hello-kitty-stamp {
    width: 60px;
    height: 60px;
    background: #ff6fb5;
    border-radius: 10px;
    border: 3px dashed white;
    display: flex;
    justify-content: center;
    align-items: center;
    transform: rotate(10deg);
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
}

.stamp-kitty {
    color: white;
}

.stamp-face {
    position: relative;
    width: 35px;
    height: 30px;
    background: white;
    border-radius: 50%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.stamp-ear {
    position: absolute;
    width: 12px;
    height: 15px;
    background: white;
    border-radius: 50% 50% 0 0;
    top: -5px;
}

.stamp-ear-left {
    left: 2px;
    transform: rotate(-20deg);
}

.stamp-ear-right {
    right: 2px;
    transform: rotate(20deg);
}

.stamp-eyes {
    display: flex;
    gap: 10px;
    margin-top: 5px;
}

.stamp-eye {
    color: black;
    font-size: 12px;
}

.stamp-bow-mini {
    position: absolute;
    top: -3px;
    left: 50%;
    transform: translateX(-50%);
    width: 10px;
    height: 10px;
    background: #ff0066;
    border-radius: 50%;
}

.stamp-bow-mini::before,
.stamp-bow-mini::after {
    content: '';
    position: absolute;
    width: 8px;
    height: 8px;
    background: #ff0066;
    border-radius: 50% 0;
    top: 50%;
    transform: translateY(-50%);
}

.stamp-bow-mini::before {
    left: -6px;
    transform: translateY(-50%) rotate(45deg);
}

.stamp-bow-mini::after {
    right: -6px;
    transform: translateY(-50%) rotate(-45deg);
}

/* Contenido de la carta */
.letter-body {
    font-family: $font-handwritten;
    font-size: 22px;
    line-height: 1.8;
    color: #333;
    text-align: left;
}

.letter-body h1 {
    color: $primary-pink;
    font-size: 36px;
    margin-bottom: 20px;
    text-align: center;
    font-family: $font-main;
}

.letter-body p {
    margin-bottom: 15px;
    text-indent: 30px;
}

.signature {
    margin-top: 40px;
    text-align: right;
    font-style: italic;
}

.signature .name {
    font-size: 28px;
    color: $primary-pink;
    font-weight: bold;
    margin-top: 10px;
}

/* Decoraci√≥n de la carta */
.letter-footer {
    margin-top: 30px;
    text-align: center;
}

.decoration-hearts {
    font-size: 28px;
    display: flex;
    justify-content: center;
    gap: 20px;
    animation: heartFloat 2s ease-in-out infinite;
}

@keyframes heartFloat {
    0%, 100% { transform: translateY(0px); }
    50% { transform: translateY(-5px); }
}

/* ==================== BOT√ìN CERRAR ==================== */
.close-button {
    position: absolute;
    top: 50px;
    right: 50px;
    width: 50px;
    height: 50px;
    background: linear-gradient(135deg, $primary-pink 0%, $hot-pink 100%);
    border: 3px solid white;
    border-radius: 50%;
    color: white;
    font-size: 28px;
    cursor: pointer;
    display: none;
    @include flex-center;
    box-shadow: 0 5px 20px rgba($primary-pink, 0.5);
    z-index: 15;
    opacity: 0;
    transform: scale(0);
    @include smooth-transition(transform, 0.2s);
    
    &:hover {
        transform: scale(1.15) rotate(90deg) !important;
        box-shadow: 0 8px 25px rgba($primary-pink, 0.7);
    }
}

/* Scrollbar personalizado */
.letter-content::-webkit-scrollbar {
    width: 8px;
}

.letter-content::-webkit-scrollbar-track {
    background: #ffe0f0;
    border-radius: 10px;
}

.letter-content::-webkit-scrollbar-thumb {
    background: #ffb3d9;
    border-radius: 10px;
}

.letter-content::-webkit-scrollbar-thumb:hover {
    background: #ff8dc7;
}

/* Corazones flotantes */
.floating-heart {
    user-select: none;
    filter: drop-shadow(0 2px 4px rgba(255, 111, 181, 0.3));
}

/* Mejora visual del sobre */
.envelope-back {
    background: linear-gradient(135deg, #ff85c0 0%, #ff6fb5 100%);
    position: relative;
}

.envelope-back::before {
    content: '';
    position: absolute;
    top: 10px;
    left: 10px;
    right: 10px;
    bottom: 10px;
    border: 2px dashed rgba(255, 255, 255, 0.3);
    border-radius: 8px;
    pointer-events: none;
}

/* Particles JS Background */
#particles-js {
    position: fixed;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    z-index: 0;
    pointer-events: none;
}

/* Responsive */
@media (max-width: 1024px) {
    body::before {
        font-size: 24px;
    }
    
    .envelope {
        width: 350px;
        height: 245px;
    }
    
    .envelope-flap {
        border-left: 175px solid transparent;
        border-right: 175px solid transparent;
        border-top: 122.5px solid #ff6fb5;
    }
}

@media (max-width: 768px) {
    body::before {
        font-size: 20px;
        top: 10px;
    }
    
    .envelope {
        width: 320px;
        height: 224px;
    }
    
    .envelope-flap {
        border-left: 160px solid transparent;
        border-right: 160px solid transparent;
        border-top: 112px solid #ff6fb5;
    }
    
    .kitty-head {
        width: 95px;
        height: 90px;
    }
    
    .face {
        width: 75px;
        height: 68px;
    }
    
    .letter {
        width: 92vw;
        max-height: 85vh;
    }
    
    .letter-content {
        padding: 30px 20px;
    }
    
    .letter-body {
        font-size: 19px;
    }
    
    .letter-body h1 {
        font-size: 30px;
    }
    
    .close-button {
        top: 15px;
        right: 15px;
        width: 45px;
        height: 45px;
        font-size: 26px;
    }
    
    .hello-kitty-stamp {
        width: 55px;
        height: 55px;
    }
}

@media (max-width: 480px) {
    body::before {
        font-size: 18px;
        top: 5px;
    }
    
    .envelope {
        width: 280px;
        height: 196px;
    }
    
    .envelope-flap {
        border-left: 140px solid transparent;
        border-right: 140px solid transparent;
        border-top: 98px solid #ff6fb5;
    }
    
    .kitty-head {
        width: 85px;
        height: 80px;
    }
    
    .ear {
        width: 28px;
        height: 34px;
    }
    
    .face {
        width: 68px;
        height: 62px;
    }
    
    .eyes {
        gap: 20px;
    }
    
    .bow-left, .bow-right {
        width: 15px;
        height: 15px;
    }
    
    .letter {
        width: 95vw;
        max-height: 88vh;
    }
    
    .letter-content {
        padding: 25px 18px;
    }
    
    .letter-body {
        font-size: 17px;
        line-height: 1.7;
    }
    
    .letter-body h1 {
        font-size: 26px;
        margin-bottom: 15px;
    }
    
    .letter-body p {
        margin-bottom: 12px;
        text-indent: 20px;
    }
    
    .signature {
        margin-top: 30px;
    }
    
    .signature .name {
        font-size: 24px;
    }
    
    .close-button {
        top: 10px;
        right: 10px;
        width: 42px;
        height: 42px;
        font-size: 24px;
    }
    
    .hello-kitty-stamp {
        width: 50px;
        height: 50px;
    }
    
    .decoration-hearts {
        font-size: 24px;
        gap: 15px;
    }
    
    .envelope-text {
        font-size: 16px;
    }
    
    .heart {
        font-size: 20px;
    }
}

@media (max-width: 360px) {
    .envelope {
        width: 260px;
        height: 182px;
    }
    
    .envelope-flap {
        border-left: 130px solid transparent;
        border-right: 130px solid transparent;
        border-top: 91px solid #ff6fb5;
    }
    
    .letter-body {
        font-size: 16px;
    }
    
    .letter-body h1 {
        font-size: 24px;
    }
    
    .letter-content {
        padding: 20px 15px;
    }
}

/* Orientaci√≥n horizontal en m√≥viles */
@media (max-height: 600px) and (orientation: landscape) {
    .letter {
        max-height: 90vh;
        width: 70vw;
    }
    
    .letter-content {
        padding: 20px;
    }
    
    .envelope {
        transform: scale(0.8);
    }
    
    .close-button {
        top: 10px;
        right: 10px;
    }
}
